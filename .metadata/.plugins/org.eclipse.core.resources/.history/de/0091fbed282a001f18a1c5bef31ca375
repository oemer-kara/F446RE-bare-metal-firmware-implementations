#ifndef ADC_H_
#define ADC_H_
#include "stm32f446xx.h"

#define ADC1EN      (1U << 8)
#define GPIOAEN     (1U << 0)
#define ANALOG_MODE (2U << 2)
#define ADC_CH1     (1U << 0)
#define ADC_SEQ_LEN 0x00
#define CR2_ADON     (1U << 0)
#define CR2_SWSTART (1U <<30)
#define SR_EOC		 (1U << 1)

uint32_t adc_read(void);
void start_conversion(void);
void pa1_adc_init(void);

#endif /* ADC_H_ */
